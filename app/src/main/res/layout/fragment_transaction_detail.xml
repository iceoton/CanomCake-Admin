<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/containerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_light"
    android:orientation="vertical"
    android:padding="@dimen/padding_normal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/card_background"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/padding_normal">

        <TextView
            style="@style/Text.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ข้อมูลคำสั่งซื้อ " />

        <TextView
            android:id="@+id/text_order_id"
            style="@style/Text.Body.Large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="#00"
            android:textColor="@color/blue" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/card_background"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/padding_normal">

        <TextView
            style="@style/Text.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ข้อมูลลูกค้า" />

        <TextView
            android:id="@+id/text_customer_id"
            style="@style/Text.Body.Large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="#00"
            android:textColor="@color/blue" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/card_background"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/padding_normal">

        <TextView
            style="@style/Text.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ข้อมูลการโอนเงิน" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="8dp">

            <TextView
                style="@style/Text.Body.Normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="เลขที่บัญชี: "
                android:textColor="@color/gray_black" />

            <TextView
                android:id="@+id/text_bank_account"
                style="@style/Text.Body.Normal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="000-0-00000-0"
                android:textColor="@color/primary_text" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="8dp">

            <TextView
                style="@style/Text.Body.Normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ธนาคาร: "
                android:textColor="@color/gray_black" />

            <TextView
                android:id="@+id/text_bank_name"
                style="@style/Text.Body.Normal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="ชื่อธนาคารที่โอนเงิน"
                android:textColor="@color/primary_text" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="8dp">

            <TextView
                style="@style/Text.Body.Normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="จำนวนเงิน: "
                android:textColor="@color/gray_black" />

            <TextView
                android:id="@+id/text_amount"
                style="@style/Text.Body.Normal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="0 บาท"
                android:textColor="@color/primary_text" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="8dp">

            <TextView
                style="@style/Text.Body.Normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="เวลาที่โอนเงิน: "
                android:textColor="@color/gray_black" />

            <TextView
                android:id="@+id/text_date_time"
                style="@style/Text.Body.Normal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="10:30 01-01-2016"
                android:textColor="@color/primary_text" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="8dp">

            <TextView
                style="@style/Text.Body.Normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="หมายเหตุ: "
                android:textColor="@color/gray_black" />

            <TextView
                android:id="@+id/text_description"
                style="@style/Text.Body.Normal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="-"
                android:textColor="@color/primary_text" />
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/button_accept"
        style="@style/Text.Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/btn_green"
        android:text="ได้รับเงินเรียบร้อยแล้ว"
        android:textColor="@color/white"
        android:textStyle="bold" />

</LinearLayout>